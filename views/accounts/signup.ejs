<% include ../partials/header %>


<style>
  body{
    background: url("public/images/signup.jpg") center/cover no-repeat;
  }
  
  </style>
<body>

<div class="container-fluid sign">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
          <% if (errors.length > 0) { %>
            <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismmiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <%= errors %>
            </div>
          <% } %>
            <h1 class="text-center login-title">Project</h1>
            <div class="account-wall">
                <img class="profile-img" src="/public/images/signup.jpg"
                    alt="">
                <form class="form-signin" method="post">
                <input type="text" class="form-control" id="name"placeholder="name" name="name" required >
                <input type="text" class="form-control"id="email" placeholder="email" name="email" required autofocus>
                <input type="password" class="form-control" id="password" placeholder="password" name="password" required>
                <button class="btn btn-lg btn-primary btn-block" id="signup" type="button">
                    Sign in</button>
                <a href="#" class="pull-right need-help">Need help? </a><span class="clearfix"></span>
                </form>
            </div>
            <a href="#" class="text-center new-account">Create an account </a>
        </div>
    </div>
</div>
</body>

<% include ../partials/footer %>

