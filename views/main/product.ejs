<% include ../partials/header %>


<div class="container">
  <div class="row">

    <div class="col-md-6">
      <img src="/images/<%= product.image %>" style="width:100%;">
    </div>
    <% if(user && user.isAdmin)
        { %>
    <div class="col-md-6">
      <form method="post" action="/edit-game">
        <input type="hidden" class="form-control" name="productId" value="<%= product._id %>">
        <h1> Edit the Game</h1>
        <div class="form-group">
          <label="name">Name: </label>
            <input type="text" class="form-control" name="name" value="<%= product.name %>">
            <label="name">Price ($): </label>
              <input type="text" class="form-control" name="price" value="<%= product.price %>">
              <label="name">Image: </label>
                <input type="text" class="form-control" name="image" value="<%= product.image%>">
                <label="category">Category: </label>
                  <select name="category" class="form-control">
                    <% for (var i = 0; i < categories.length; i++)  { %>
                    <option value="<%= categories[i]._id %>"><%= categories[i].name %></option>
                    <% } %>

                  </select>
        </div>

        <button type="submit" class="btn btn-success">Submit</button>


      </form>
      <form method="post" action="/delete-game">
        <input type="hidden" class="form-control" name="productId" value="<%= product._id %>">
        <button type="submit" class="btn-danger" id="delete-game">Delete the Game</button>
      </form>
    </div>
    <% }
        else{ %>


    <div class="col-md-6">
      <h3><%= product.name %></h3>
      <h1>$<%= product.price %></h1>

      <form method="post">
        <div class="btn-group" role="group" aria-label="...">
          <input type="hidden" name="quantity" id="quantity" value="1"></input>
          <button type="button" id="minus" class="btn btn-default">-</button>
          <button type="button" id="total" class="btn btn-default">1</button>
          <button type="button" id="plus" class="btn btn-default">+</button>
        </div>

        <div class="form-group">
          <input type="hidden" name="product_id" id="quantity" value="<%= product._id %>"></input>
          <input type="hidden" name="priceHidden" id="priceHidden" value="<%= product.price %>"></input>

          <input type="text" name="item" class="form-control" value="<%= product.name %>"></input>
          <input type="text" name="priceValue" id="priceValue" class="form-control"
            value="<%= product.price %>"></input>
        </div>






        <% if (user)  { console.log(user) %>
        <button type="submit" class="btn btn-primary btn-lg">Add to Cart</button>
        <% } else { %>
        <a href='/signup' class="btn btn-warning btn-lg">Signup to begin buying!</a>
        <% } %>
        <% } %>
      </form>

    </div>
  </div>
</div>


<% include ../partials/footer %>